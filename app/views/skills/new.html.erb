<h1>New skill</h1>

<% if @skill.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @skill.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @skill do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit  %>
<% end %>
